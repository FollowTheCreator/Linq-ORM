@model Transaction

<div class="mt-3">
    <h2>Update Transaction</h2>
</div>

<form asp-action="UpdateAsync" asp-controller="Transaction" asp-anti-forgery="true" class="form-group mx-auto w-50">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Id">Id</label><br />
            <input type="text" asp-for="Id" class="form-control" value="@Model.Id" readonly />
        </div>
        <br>
        <div>
            <label asp-for="CategoryId">Category Id</label><br />
            <input type="text" asp-for="CategoryId" class="form-control" />
            <span asp-validation-for="CategoryId"></span>
        </div>
        <br>
        <div>
            <label asp-for="Amount">Amount</label><br />
            <input type="text" asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount"></span>
        </div>
        <br>
        <div>
            <label asp-for="Date">Date</label><br />
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date"></span>
        </div>
        <br>
        <div>
            <label asp-for="AssetId">Asset Id</label><br />
            <input asp-for="AssetId" class="form-control" />
            <span asp-validation-for="AssetId"></span>
        </div>
        <br>
        <div>
            <label asp-for="Comment">Comment</label><br />
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment"></span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Update" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>