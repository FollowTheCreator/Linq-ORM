@model Category

<div class="mt-3">
    <h2>Create Category</h2>
</div>

<form asp-action="CreateAsync" asp-controller="Category" asp-anti-forgery="true" class="form-group mx-auto w-50">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <br>
        <div>
            <label asp-for="Type">Type</label><br />
            <input type="text" asp-for="Type" class="form-control" />
            <span asp-validation-for="Type"></span>
        </div>
        <br>
        <div>
            <label asp-for="ParentId">Parent Id</label><br />
            <input asp-for="ParentId" class="form-control" />
            <span asp-validation-for="ParentId"></span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>