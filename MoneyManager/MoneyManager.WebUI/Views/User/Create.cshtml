@model CreateUserModel

<div class="mt-3">
    <h2>Create User</h2>
</div>

<form asp-action="CreateAsync" asp-controller="User" asp-anti-forgery="true" class="form-group mx-auto w-50">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <br>
        <div>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <br>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <br>
        <div>
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>