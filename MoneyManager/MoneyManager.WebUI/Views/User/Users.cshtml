@model UserViewModel

<div>
    <table class="table mt-3">
        <thead class="thead-light">
            <tr>
                <th class="text-dark">
                    Id
                </th>
                <th class="text-dark">
                    Name
                </th>
                <th class="text-dark">
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="User" asp-action="GetByIdAsync" asp-route-id="@item.Id" class="text-dark">Details</a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4">
                    <div>
                        <a asp-controller="User" asp-action="CreateAsync" class="btn bg-light w-100">
                            <h4>+</h4>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex my-5">
        <div class="btn-group mx-auto">
            @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
            {
                if (i == Model.PageInfo.PageNumber)
                {
                    <a asp-controller="User" asp-action="GetRecordsAsync" asp-route-PageNumber="@i" class="btn btn-secondary">
                        @i
                    </a>
                }
                else
                {
                    <a asp-controller="User" asp-action="GetRecordsAsync" asp-route-PageNumber="@i" class="btn btn-outline-secondary">
                        @i
                    </a>
                }
            }
        </div>
    </div>
</div>
