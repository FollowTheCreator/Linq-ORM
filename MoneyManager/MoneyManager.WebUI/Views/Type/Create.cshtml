@model MoneyManager.WebUI.Models.Type.Type

<div class="mt-3">
    <h2>Create Type</h2>
</div>

<form asp-action="CreateAsync" asp-controller="Type" asp-anti-forgery="true" class="form-group mx-auto w-50">
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>