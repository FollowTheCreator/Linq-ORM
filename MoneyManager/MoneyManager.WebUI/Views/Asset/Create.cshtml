@model Asset

<div class="mt-3">
    <h2>Create Asset</h2>
</div>

<form asp-action="CreateAsync" asp-controller="Asset" asp-anti-forgery="true" class="form-group mx-auto w-50">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <br>
        <div>
            <label asp-for="UserId">UserId</label><br />
            <input type="text" asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId"></span>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>